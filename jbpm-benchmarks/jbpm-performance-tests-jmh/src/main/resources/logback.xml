<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <!-- APPENDERS LIST -->
  <!-- show log entries in file -->
  <appender name="fileAppender" class="ch.qos.logback.core.FileAppender">
    <file>target/log.out</file>
    <append>false</append>
    <encoder>
      <pattern>%d [%t] [%c] %-5p %m%n</pattern>
    </encoder>
  </appender>
  <appender name="asyncFileAppender" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize>300</queueSize>
    <appender-ref ref="fileAppender"/>
  </appender>
  
  <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d [%t] [%c] %-5p %m%n</pattern>
    </encoder>
  </appender>
  <appender name="asyncConsoleAppender" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize>300</queueSize>
    <appender-ref ref="consoleAppender"/>
  </appender>

  <!-- LOGGER LIST -->

  <logger name="com.arjuna">
    <level value="info"/>
  </logger>

  <logger name="org.hibernate">
    <level value="info"/>
  </logger>

  <logger name="org.kie">
    <level value="info"/>
  </logger>

  <logger name="org.drools">
    <level value="info"/>
  </logger>

  <logger name="org.jbpm">
    <level value="info"/>
  </logger>

  <logger name="org.jbpm.test.performance">
    <level value="debug"/>
  </logger>

  <root level="info">
    <appender-ref ref="consoleAppender"/>
    <!-- Intentionally turned off for the tests, useful for debugging -->
    <!--<appender-ref ref="fileAppender" />-->
  </root>
</configuration>
